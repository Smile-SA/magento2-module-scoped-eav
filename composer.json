{
    "name": "smile/module-scoped-eav",
    "type": "magento2-module",
    "description": "Smile - Scoped EAV utils.",
    "keywords": ["magento2", "elasticsuite"],
    "authors": [
        {
            "name": "Aurélien FOUCRET",
            "email": "aurelien.foucret@smile.fr"
        },
        {
            "name": "Cédric MAGREZ",
            "email": "cedric.magrez@smile.fr"
        }
    ],
    "license": "OSL-3.0",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "magento/composer-dependency-version-audit-plugin": true,
            "magento/magento-composer-installer": false
        },
        "sort-packages": true
    },
    "require": {
        "php": "^7.4 || ^8.1",
        "magento/framework": "*",
        "magento/magento-composer-installer": "*",
        "magento/module-catalog": ">=103.0.4"
    },
    "require-dev": {
        "smile/magento2-smilelab-quality-suite": "^3.0"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Smile\\ScopedEav\\" : ""
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
