<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Smile\ScopedEav\Model\Adminhtml\System\Config\Source\InputtypeFactory" type="Magento\Eav\Model\Adminhtml\System\Config\Source\InputtypeFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Smile\ScopedEav\Model\Adminhtml\System\Config\Source\Inputtype</argument>
        </arguments>
    </virtualType>
    <type name="Smile\ScopedEav\Block\Adminhtml\Attribute\Edit\Tab\Main">
        <arguments>
            <argument name="inputTypeFactory" xsi:type="object">Smile\ScopedEav\Model\Adminhtml\System\Config\Source\InputtypeFactory</argument>
        </arguments>
    </type>

    <type name="Smile\ScopedEav\Model\Adminhtml\System\Config\Source\Inputtype">
        <arguments>
            <argument name="optionsArray" xsi:type="array">
                <item name="800" xsi:type="array">
                    <item name="value" xsi:type="string">image</item>
                    <item name="label" xsi:type="string" translate="true">Image File</item>
                </item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Smile\ScopedEav\Model\ImageUploader" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">scoped_eav/tmp/entity</argument>
            <argument name="basePath" xsi:type="string">scoped_eav/entity</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Smile\ScopedEav\Controller\Adminhtml\Entity\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Smile\ScopedEav\Model\ImageUploader</argument>
        </arguments>
    </type>
    <type name="Smile\ScopedEav\Model\Entity\Attribute\Backend\Image">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Smile\ScopedEav\Model\ImageUploader</argument>
        </arguments>
    </type>
</config>
